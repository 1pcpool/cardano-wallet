name:                cardano-wallet-shelley
version:             2019.7.24
synopsis:            Wallet backend protocol-specific bits implemented using Shelley nodes
description:         Please see README.md
homepage:            https://github.com/input-output-hk/cardano-wallet
author:              IOHK Engineering Team
maintainer:          operations@iohk.io
copyright:           2019 IOHK
license:             Apache-2.0
category:            Web
build-type:          Simple
cabal-version:       >=1.10

flag development
    description: Disable `-Werror`
    default: False
    manual: True

library
  default-language:
      Haskell2010
  default-extensions:
      NoImplicitPrelude
      OverloadedStrings
  ghc-options:
      -Wall
      -Wcompat
      -fwarn-redundant-constraints
  if (!flag(development))
    ghc-options:
      -Werror
  build-depends:
      base
    , bytestring
    , cardano-ledger
    , cardano-crypto-wrapper
    , contra-tracer
    , io-sim-classes
    , network
    , network-mux
    , ouroboros-consensus
    , ouroboros-network
    , serialise
    , text
    , transformers
    , typed-protocols
    , typed-protocols-cbor
  hs-source-dirs:
      src
  exposed-modules:
      Cardano.Wallet.Shelley.Network
